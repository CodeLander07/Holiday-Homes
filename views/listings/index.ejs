<% layout("/layout/boilerplate") %>
<style>
  #filters{
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
  }
  .filters{
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
    cursor: pointer;
  }
  .filters:hover{
    opacity: 1;
  }
</style>
<body >

    <!-- <h1>All Listings</h1> -->
     <div class="" id="filters">
      <div class="filters">
        <div>
          <i class="fa-solid fa-fire"></i>
        </div>
        <p>Trending</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-bed"></i>
        </div>
        <p>Rooms</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-mountain-city"></i>
        </div>
        <p>Iconic Cities</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-mountain"></i>
        </div>
        <p>Mountains</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-brands fa-fort-awesome"></i>
        </div>
        <p>Castles </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>Amazing  pools</p>
      </div>
      <div class="filters">
        <div>
         <i class="fa-solid fa-campground"></i>
        </div>
        <p>Campgrounds</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-tractor"></i>
        </div>
        <p>Farms</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-city"></i>
        </div>
        <p>Bungalow</p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-snowflake"></i>
        </div>
        <p>Snow</p>
      </div>
      
     </div>

<div class="row row-cols-lg-4 row-cols-md-2 mt-3 row-cols-sm-1 g-4">
  
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card col" style="width: 18rem;">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
      <div class="card-img-overlay">Its card-img-overlay</div>
      <div class="card-body">
        <p class="card-text">
          
          <b><%= listing.title %></b><br>
          
          &#8377; <%= listing.price.toLocaleString("en-IN") %> /Night<br>
          <%= listing.location %><br>
        </p>
      </div>
    </div>
  </a>
    <% } %>
</div>
  
    
</body>
