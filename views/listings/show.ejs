<% layout("/layout/boilerplate") %>
  <body>
    <div class="row mt-4">
      <div class="col-8 offset-2">
    <h3>Listing Details :</h3>
  </div>
<div class="col-8 offset-2">
    <div class="card">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.description %><br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %><br />
          <%= listing.location %><br />
          <%= listing.country %><br />
        </p>
      </div>
    </div>


<br/>

  <div class="col-1 btns">
    <a class="btn btn-dark add-btn mb-3 col-2 offset-2 " 
    href="/listings/<%= listing._id %>/edit">Edit Listing</a>

    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-dark add-btn col-1 offset-4">Delete Listing</button>
    </form>

</div>
</div>
  </body>
