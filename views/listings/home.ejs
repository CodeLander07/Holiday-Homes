<% layout("/layout/boilerplate") %>
<body class="bg-light">
    <div class="container py-5">
        <h4 class="text-center mb-4 fw-bold" style="font-size:2rem;">Welcome to the Listings Home Page</h4>
        <p class="text-center fs-5 mb-5">
            Here you can find various listings for hotels and accommodations.<br>
            Browse through the options below or create your own listing.
        </p>
        <div class="text-center mb-4">
            <a href="/listings" class="btn btn-primary btn-lg fw-semibold px-5 py-3" style="border-radius:8px;">
                View All Listings
            </a>
        </div>
        <div class="row justify-content-center g-4">
        <% if (typeof listings !== 'undefined' && listings.length > 0) { %>
            <% listings.forEach(function(listing) { %>
                <div class="col-md-6 col-lg-4 d-flex">
                    <div class="card shadow-sm flex-fill h-100">
                        <%
                            const exampleImages = [
                                "https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80",
                                "https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=800&q=80",
                                "https://images.unsplash.com/photo-1512918728675-ed5a9ecdebfd?auto=format&fit=crop&w=800&q=80"
                            ];
                            const randomImage = exampleImages[Math.floor(Math.random() * exampleImages.length)];
                        %>
                        <img src="<%= listing.image ? listing.image : randomImage %>" class="card-img-top" alt="<%= listing.title %>" style="height:200px;object-fit:cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center fw-bold">
                                <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                                    <%= listing.title %>
                                </a>
                            </h5>
                            <p class="card-text text-center mb-2">
                                <strong>Location:</strong> <%= listing.location %>
                            </p>
                            <p class="card-text text-center mb-2">
                                <strong>Price per night:</strong> $<%= listing.price %>
                            </p>
                            <p class="card-text text-center text-muted mb-0">
                                <%= listing.description ? listing.description.substring(0, 100) : '' %>...
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="fs-4 text-center text-secondary">No listings available.</div>
            </div>
        <% } %>
        </div>
    </div>
</body>