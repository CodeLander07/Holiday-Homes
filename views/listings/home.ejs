<% layout("/layout/boilerplate") %>
    <body>
        <h3>Home</h3>
        <h4>Welcome to the Listings Home Page</h4>
        <p>Here you can find various listings.</p>
        <a href="/listings/new">Create a New Listing</a>
        <ul>
        <% if (typeof listings !== 'undefined' && listings.length > 0) { %>
            <% listings.forEach(function(listing) { %>
                <li><%= listing.title %></li>
            <% }) %>
        <% } else { %>
            <li>No listings available.</li>
        <% } %>
        </ul>
    </body>